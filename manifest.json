{
  "manifest_version": 2,
  "version": "0.1.1",
  "name": "JumpKCR",
  "description": "Jump to Kindle Cloud Reader",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icon38.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
